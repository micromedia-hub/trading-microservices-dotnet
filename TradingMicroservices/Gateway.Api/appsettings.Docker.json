{
  "Jwt": {
    "Audience": "trading-api",
    "RequireHttps": false,
    "SigningKey": "super-secret-test-key-change-me-32+chars"
  },
  "ReverseProxy": {
    "Routes": {
      "order": {
        "ClusterId": "order",
        "Match": {
          "Path": "/api/order/{**catch-all}"
        }
      },
      "portfolio": {
        "ClusterId": "portfolio",
        "Match": {
          "Path": "/api/portfolio/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "order": {
        "Destinations": {
          "d1": {
            "Address": "http://order-service:8080"
          }
        }
      },
      "portfolio": {
        "Destinations": {
          "d1": {
            "Address": "http://portfolio-service:8080"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    }
  }
}
