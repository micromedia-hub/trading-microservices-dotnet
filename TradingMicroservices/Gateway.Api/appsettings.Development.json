{
  "Jwt": {
    "Audience": "trading-api",
    "RequireHttps": false,
    "SigningKey": "super-secret-test-key-change-me-32+chars"
  },
  "ReverseProxy": {
    "Routes": {
      "order": {
        "ClusterId": "order",
        "Match": { "Path": "/api/order/{**catch-all}" },
        "Transforms": [
          { "RequestHeadersCopy": "true" }
        ]
      },
      "portfolio": {
        "ClusterId": "portfolio",
        "Match": { "Path": "/api/portfolio/{**catch-all}" },
        "Transforms": [
          { "RequestHeadersCopy": "true" }
        ]
      }
    },
    "Clusters": {
      "order": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5015" }
        }
      },
      "portfolio": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5045" }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
